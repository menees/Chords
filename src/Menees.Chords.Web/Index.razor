@page "/"

<PageTitle>Menees Chord Sheet Converter</PageTitle>

<div class="container-fluid d-flex flex-grow-1">
    <div class="row flex-grow-1">
        <div class="col d-flex flex-column">
            <div class="row">
                <div class="d-flex align-items-center gap-2">
                    <label for="from" class="text-nowrap">Input:</label>
                    <select id="from" @bind="@FromType" @bind:event="onchange" class="form-select my-2 min-width">
                        <option value="@Parser.General">General</option>
                        <option value="@Parser.ChordPro">ChordPro</option>
                    </select>

                    <!-- Hidden native file input; label below acts as the visible Bootstrap button -->
                    <InputFile id="fileInput" OnChange="OpenAsync" style="display:none"
                        accept=".txt,.tab,.cho,.crd,.pro,.cpm,.chopro,.chord,.chordpro"  />
                    <label class="btn btn-primary text-nowrap" for="fileInput" role="button" aria-label="Open">
                        <Icon Name="IconName.Open" /><span class="d-none d-xl-inline ps-1"> Open</span>
                    </label>

                    <button class="btn btn-secondary text-nowrap" @onclick="CleanInputAsync" aria-label="Clean">
                        <Icon Name="IconName.Clean" /><span class="d-none d-xl-inline ps-1"> Clean</span>
                    </button>
                    <button class="btn btn-secondary text-nowrap" @onclick="ConvertInput" aria-label="Convert">
                        <Icon Name="IconName.Convert" /><span class="d-none d-xl-inline ps-1"> Convert</span>
                    </button>
                    <div class="d-flex flex-column">
                        <div class="form-check form-check">
                            <input id="whenTyping" type="checkbox" class="form-check-input" @bind="WhenTyping" @bind:event="onchange" />
                            <label for="whenTyping" class="form-check-label text-nowrap">When Typing</label>
                        </div>
                        <div class="form-check form-check">
                            <input id="longNames" type="checkbox" class="form-check-input" @bind="LongNames" @bind:event="onchange" />
                            <label for="longNames" class="form-check-label text-nowrap">To Long Names</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row flex-grow-1">
                <div class="col">
                    <textarea @bind="@Input" @bind:event=@InputChangeEvent spellcheck="false" wrap="hard"
                              class="form-control font-monospace mono-font w-100 h-most" @ref="inputElement"></textarea>
                </div>
            </div>
        </div>
        <div class="col d-flex flex-column">
            <div class="row">
                <div class="d-flex align-items-center gap-2">
                    <label for="to" class="text-nowrap">Output:</label>
                    <select id="to" @bind="@ToType" @bind:event="onchange" class="form-select my-2 min-width">
                        <option value="@Transformer.ChordPro">ChordPro</option>
                        <option value="@Transformer.MobileSheets">MobileSheets</option>
                        <option value="@Transformer.ChordOverLyric">Chords Over Text</option>
                    </select>
                    <div class="btn-group">
                        <button class="btn @copyState.ButtonClass text-nowrap" @onclick="CopyOutputToClipboardAsync" disabled=@copyState.IsDisabled aria-label="@copyState.Text">
                            <Icon Name="@copyState.IconName" /><span class="d-none d-xl-inline ps-1"> @copyState.Text</span>
                        </button>
                        <button class="btn @copyState.ButtonClass dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="#" @onclick="CopyOutputToClipboardAsync">
                                    <Icon Name="IconName.CopyDocument" />
                                    <span class="ps-1">Copy Output</span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#" @onclick="CopyFileNameToClipboardAsync">
                                    <Icon Name="IconName.CopyDetail" />
                                    <span class="ps-1">Copy File Name</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <button class="btn btn-primary text-nowrap" @onclick="SaveAsync" aria-label="Save">
                        <Icon Name="IconName.Save" /><span class="d-none d-xl-inline ps-1"> Save</span>
                    </button>
                </div>
            </div>
            <div class="row flex-grow-1">
                <div class="col">
                    <textarea @bind="@output" @bind:event=oninput spellcheck="false" wrap="hard"
                              class="form-control font-monospace mono-font w-100 h-most" id="output"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>



