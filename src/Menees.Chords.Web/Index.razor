@page "/"

<PageTitle>Menees Chord Sheet Converter</PageTitle>

<div class="container-fluid d-flex flex-grow-1">
    <div class="row flex-grow-1">
        <div class="col d-flex flex-column">
            <div class="row">
                <div class="d-flex align-items-center gap-2">
                    <label for="from" class="text-nowrap">Input:</label>
                    <select id="from" @bind="@FromType" @bind:event="onchange" class="form-select my-2 min-width">
                        <option value="General">General</option>
                        <option value="ChordPro">ChordPro</option>
                    </select>

                    <!-- Hidden native file input; label below acts as the visible Bootstrap button -->
                    <InputFile id="fileInput" OnChange="OpenAsync" accept=".txt,.cho,.crd,.pro,.cpm,.chopro,.chordpro" style="display:none" />
                    <label class="btn btn-secondary text-nowrap" for="fileInput" role="button" aria-label="Open">
                        <Icon Name="IconName.Open" /><span class="d-none d-lg-inline"> Open</span>
                    </label>

                    <button class="btn btn-secondary text-nowrap" @onclick="CleanInputAsync" aria-label="Clean">
                        <Icon Name="IconName.Clean" /><span class="d-none d-lg-inline"> Clean</span>
                    </button>
                    <button class="btn btn-primary text-nowrap" @onclick="ConvertInput" aria-label="Convert">
                        <Icon Name="IconName.Convert" /><span class="d-none d-lg-inline"> Convert</span>
                    </button>
                    <div class="form-check form-switch">
                        <input id="whenTyping" type="checkbox" class="form-check-input" @bind="WhenTyping" @bind:event="onchange" />
                        <label for="whenTyping" class="form-check-label text-nowrap">When Typing</label>
                    </div>
                </div>
            </div>
            <div class="row flex-grow-1">
                <div class="col">
                    <textarea @bind="@Input" @bind:event=@InputChangeEvent spellcheck="false" wrap="hard"
                              class="form-control font-monospace mono-font w-100 h-most" @ref="inputElement"></textarea>
                </div>
            </div>
        </div>
        <div class="col d-flex flex-column">
            <div class="row">
                <div class="d-flex align-items-center gap-2">
                    <label for="to" class="text-nowrap">Output:</label>
                    <select id="to" @bind="@ToType" @bind:event="onchange" class="form-select my-2 min-width">
                        <option value="ChordPro">ChordPro</option>
                        <option value="MobileSheets">MobileSheets</option>
                        <option value="ChordOverLyric">Chords Over Text</option>
                    </select>
                    <button class="btn @copyState.ButtonClass text-nowrap" @onclick="CopyToClipboardAsync" disabled=@copyState.IsDisabled aria-label="@copyState.Text">
                        <Icon Name="@copyState.IconName" /><span class="d-none d-lg-inline"> @copyState.Text</span>
                    </button>
                    <button class="btn btn-secondary text-nowrap" @onclick="SaveAsync" aria-label="Save">
                        <Icon Name="IconName.Save" /><span class="d-none d-lg-inline"> Save</span>
                    </button>
                </div>
            </div>
            <div class="row flex-grow-1">
                <div class="col">
                    <textarea @bind="@output" @bind:event=oninput spellcheck="false" wrap="hard"
                              class="form-control font-monospace mono-font w-100 h-most" id="output"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>



